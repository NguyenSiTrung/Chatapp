<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bg_login"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="left"

            android:src="@drawable/ic_account_circle_white_36dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="Register with us"
            android:textSize="30dp" />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_below="@id/lv1"
        android:id="@+id/bt_avt"
        android:text="Chon Avatar"
        android:background="@color/bg_login"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
    <EditText
        android:drawableLeft="@drawable/ic_account_circle_black_18dp"
        android:layout_width="match_parent"
        android:hint="Enter User Name"
        android:textColor="@android:color/black"
        android:id="@+id/name"
        android:layout_below="@+id/bt_avt"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:layout_height="40dp" />
    <EditText
        android:drawableLeft="@drawable/ic_account_circle_black_18dp"
        android:layout_width="match_parent"
        android:hint="Enter Email"
        android:textColor="@android:color/black"
        android:id="@+id/email"
        android:layout_below="@id/name"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:inputType="textEmailAddress"
        android:background="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:layout_height="40dp" />
    <EditText
        android:drawableLeft="@drawable/ic_lock_black_18dp"
        android:layout_width="match_parent"
        android:hint="Enter Password"
        android:textColor="@android:color/black"
        android:id="@+id/password"
        android:inputType="textPassword"
        android:layout_below="@id/email"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:layout_height="40dp" />
    <EditText
        android:drawableLeft="@drawable/ic_lock_black_18dp"
        android:layout_width="match_parent"
        android:hint="Enter Re Password"
        android:textColor="@android:color/black"
        android:id="@+id/rePassword"
        android:inputType="textPassword"
        android:layout_below="@id/password"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:layout_height="40dp" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:background="#d67601"
        android:text="Register"
        android:layout_below="@+id/rePassword"
        android:id="@+id/btnRegister"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="22dp"
        android:background="@color/bg_login"
        android:text="Back Login"
        android:layout_below="@+id/btnRegister"
        android:id="@+id/btnLinkToLoginScreen"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp" />
</RelativeLayout>